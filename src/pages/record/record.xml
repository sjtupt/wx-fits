<view class="container">
  <view class="weight-wrap">
    <text class="weight-title">体重(kg):</text>
    <input
            class="weight-input"
            placeholder-class="weight-placeholder"
            placeholder="请输入体重(以公斤kg为单位)"
            type="number"
            bindblur="bindblur"
            bindconfirm="bindconfirm"
            auto-focus />
  </view>
  <view class="weight-wrap" bindtap="chooseDay">

    <text class="weight-title">日期:</text>
    <text class="time">2017-4-12</text>
    <text class="time-info">今天</text>
  </view>
  <view class="weight-wrap" bindtap="chooseTime">
    <text class="weight-title">时间:</text>
    <text class="time">上午</text>
    <text class="time-info">4：00 - 10：00</text>
